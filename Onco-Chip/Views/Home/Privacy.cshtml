@{
	ViewData["Title"] = "Fale Conosco";
}

<div style="
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 40px;
">
	<div style="
        background-color: #d9f2e3;
        width: 450px;
        padding: 40px 20px;
        border-radius: 10px;
	">
		<div style="
            background-color: #3f7f57;
            color: white;
            padding: 15px 20px;
            border-radius: 10px 10px 0 0;
            font-weight: bold;
            font-size: 18px;
		">
			Fale Conosco
		</div>

		<div style="
            background-color: white;
            padding: 30px 25px;
            border-radius: 0 0 10px 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
		">
			<!-- Central de Atendimento -->
			<div style="display: flex; align-items: center; margin-bottom: 25px;">
				<img src="https://cdn-icons-png.flaticon.com/512/126/126509.png"
					 width="38" style="margin-right: 15px;">
				<div>
					<p style="margin: 0; font-weight: bold;">Central de Atendimento</p>
					<p style="margin: 0; color: #28a06d; font-weight: bold;">0800 1234-5678</p>
					<p style="margin: 0; font-size: 12px;">Todos os dias das 07h às 17h</p>
				</div>
			</div>

			<!-- Email -->
			<div style="display: flex; align-items: center; margin-bottom: 30px;">
				<img src="https://cdn-icons-png.flaticon.com/512/561/561127.png"
					 width="38" style="margin-right: 15px;">
				<div>
					<p style="margin: 0; font-weight: bold;">Fale Conosco</p>
					<p style="margin: 0; color: #28a06d; font-weight: bold;">contato@email.com</p>
				</div>
			</div>

			<!-- Redes sociais -->
			<div style="text-align: center;">
				<img src="https://cdn-icons-png.flaticon.com/512/733/733579.png" width="28" style="margin: 0 10px;">
				<img src="https://cdn-icons-png.flaticon.com/512/1384/1384063.png" width="28" style="margin: 0 10px;">
				<img src="https://cdn-icons-png.flaticon.com/512/145/145802.png" width="28" style="margin: 0 10px;">
			</div>
		</div>
	</div>
</div>
