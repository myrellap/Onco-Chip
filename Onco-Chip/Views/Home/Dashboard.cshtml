@* Local: Views/Dashboard/Index.cshtml
   Depende do Bootstrap 5 e suas classes. *@

@{
	ViewData["Title"] = "Dashboard ONCO-CHIP";
}

<style>
	/* Se você estiver importando este código para o seu _Layout.cshtml,
										certifique-se de que o link para o CSS do Bootstrap 5 esteja presente.
										Exemplo: <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
										*/

	:root {
		--app-bg: #e5ffe5; /* Verde claro principal */
		--panel-bg: #c8e6c9; /* Verde médio dos painéis */
		--accent-green: #388e3c; /* Verde escuro para acentos, textos
					--progress-track: #a5d6a7; /* Verde da trilha de progresso */
		--alert-orange: #ffccbc; /* Fundo do alerta suave */
		--alert-red: #d32f2f;
	}

	.bg-app {
		background-color: var(--app-bg) !important;
	}

	.bg-panel {
		background-color: var(--panel-bg) !important;
	}

	.bg-accent {
		background-color: var(--accent-green) !important;
	}

	.text-accent {
		color: var(--accent-green) !important;
	}

	.progress-track {
		background-color: var(--progress-track) !important;
	}

	.alert-soft {
		background-color: var(--alert-orange) !important;
		color: var(--alert-red) !important;
	}
</style>

